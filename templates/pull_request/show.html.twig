{% extends 'layout.html.twig' %}

{% block content %}
    <h1>PullRequest: "{{ pull_request.name}} ({{ pull_request.id}})"</h1>
    <p>Imageine this is GitHub pull request page. </p>
    <div class="row">
        <div class="col-md-4">
            <h2>Properties</h2>
            <b>Id: </b> {{ pull_request.id }}<br>
            <b>Name: </b> {{ pull_request.name }}<br><br>

            {# You may want to remove these #}
            <b>State: </b> {{ pull_request.state }}<br>
        </div>
        <div class="col-md-4">
            <h2>Actions</h2>


            <form action="{{ path('pull_request_apply_transition', {id: pull_request.id}) }}" method="post">
                <div class="btn-group-vertical" role="group">
                    {% for transition in workflow_all_transitions(pull_request) %}
                        <button type="submit" name="transition" value="{{ transition.name }}"
                            {% if workflow_can(pull_request, transition.name) -%}
                                class="btn btn-primary"
                            {%- else -%}
                                class="btn btn-danger" disabled="disabled"
                            {%- endif -%}
                        >
                            {{ transition.name }}
                        </button>
                    {% endfor %}
                </div>
            </form>
            <br />
            {% if not workflow_transitions(pull_request) %}
                <strong>{{ 'no_transition_available'|trans }}</strong>
                <br />
                {{ 'try_as_another_user'|trans }}
            {% endif %}

        </div>
    </div>
{% endblock %}

